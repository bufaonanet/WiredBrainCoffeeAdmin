@page "/help"
@model WiredBrainCoffeeAdmin.Pages.HelpModel
@{
}

<h1>Service Desk</h1>
<hr />

@if (!string.IsNullOrEmpty(Model.ResponseMessage))
{
    <p class="alert alert-info">@Model.ResponseMessage</p>
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                Request Help
            </div>
            <div class="card-body">
                <h5 class="card-title">Contact our IT Team</h5>
                <p class="card-text">Having an issue with the site? Let us know!</p>
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="NewTicket.Title">Title</label>
                        <input asp-for="NewTicket.Title" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewTicket.Description">Description</label>
                        <textarea asp-for="NewTicket.Description" class="form-control"></textarea>
                    </div>
                    <button type="submit" class="btn btn-success">Submit</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <h2>Current Issues</h2>
        <hr />
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model.HelpTickets)
                {
                    <tr>
                        <td>@ticket.Id</td>
                        <td>@ticket.Title</td>
                        <td>@ticket.Description</td>
                        <td>@ticket.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section RightFooter {
    <p>Call us at: 123-456-789</p>
    <p>Hours of operation: 9am to 4pm</p>
}